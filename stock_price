// Example program
#include <iostream>
#include <stdlib.h>
#include <math.h>
#include <iomanip>

using namespace std;
int main()
{
  double price = 0;
  int days;
  
    cout << "Provide initial stock price: ";
    cin >> price;
    cout << "Provide number of days for simulation: ";
    cin >> days;
 
	for (int i = 1; i <= days; i++)
	{
		double priceMin = price -(price *0.05);
		double priceMax = price +(price *0.05);
		double f = (double)rand() / RAND_MAX;
		double dayPrice = priceMin + f * (priceMax - priceMin);
		price = dayPrice;
		/*cout << "day " << i << " ";
		cout << dayPrice;
		cout << "\n";
		*/

        cout <<  "|| " << setw(6) << left << "day" << i << " | " << setw(7) << right << dayPrice << " ||";
        cout << "\n";
	}
}
